<?xml version="1.0" encoding="utf-8"?>
<!--Chantal you can customize the popup menu for text and content alignment
adjusts padding and configures/attributes the dropdown-->
<resources>
    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:listSelector">@android:drawable/list_selector_background</item>
        <item name="android:dropDownHorizontalOffset">8dp</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
        <item name="android:listPreferredItemHeightSmall">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
</resources>
